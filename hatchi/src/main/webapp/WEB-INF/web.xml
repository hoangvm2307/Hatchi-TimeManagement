<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>hatchi.Controller.MenuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemAdmin</servlet-name>
        <servlet-class>hatchi.Controller.ItemAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingsController</servlet-name>
        <servlet-class>hatchi.Controller.SettingsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/maincontroller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TimerController</servlet-name>
        <servlet-class>hatchi.Controller.TimerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimerController</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SimonController</servlet-name>
        <servlet-class>hatchi.Controller.SimonController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimonController</servlet-name>
        <url-pattern>/simon</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TagController</servlet-name>
        <servlet-class>hatchi.Controller.TagController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TagController</servlet-name>
        <url-pattern>/tag</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OverviewController</servlet-name>
        <servlet-class>hatchi.Controller.OverviewController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OverviewController</servlet-name>
        <url-pattern>/overview</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DatabaseController</servlet-name>
        <servlet-class>hatchi.Controller.DatabaseController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DatabaseController</servlet-name>
        <url-pattern>/database</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>hatchi.Controller.AccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListItemController</servlet-name>
        <servlet-class>hatchi.Controller.ListItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListItemController</servlet-name>
        <url-pattern>/store</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>quartz:config-file</param-name>
        <param-value>quartz.properties</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:shutdown-on-unload</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:wait-on-shutdown</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>quartz:start-on-load</param-name>
        <param-value>true</param-value>
    </context-param>
    <listener>
        <listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>ItemAdmin</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingsController</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
